{
  "name": "@svelte-put/toc",
  "version": "2.1.0",
  "description": "Action & utilities for building table of contents",
  "type": "module",
  "svelte": "./lib/index.js",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": "./lib/index.js",
    "./action": "./lib/toc.action.js",
    "./attributes": "./lib/toc.attributes.js",
    "./events": "./lib/toc.events.js",
    "./internal": "./lib/toc.internal.js",
    "./item": "./lib/toc.item.js",
    "./parameters": "./lib/toc.parameters.js",
    "./store": "./lib/toc.store.js",
    "./utils": "./lib/toc.utils.js"
  },
  "types": "lib/index.d.ts",
  "typesVersions": {
    "*": {
      "action": [
        "./lib/toc.action.d.ts"
      ],
      "attributes": [
        "./lib/toc.attributes.d.ts"
      ],
      "events": [
        "./lib/toc.events.d.ts"
      ],
      "internal": [
        "./lib/toc.internal.d.ts"
      ],
      "item": [
        "./lib/toc.item.d.ts"
      ],
      "parameters": [
        "./lib/toc.parameters.d.ts"
      ],
      "store": [
        "./lib/toc.store.d.ts"
      ],
      "utils": [
        "./lib/toc.utils.d.ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "!lib/package.json",
    "!lib/CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package",
    "preview": "vite preview",
    "sync": "svelte-kit sync",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --ignore-path .gitignore \"./**/*/*{ts,js,cjs,svelte}\"",
    "format": "prettier --check --ignore-path .gitignore \"./**/*.{ts,js,cjs,json,svelte,css}\"",
    "api:extract": "api-extractor run --local --verbose",
    "api:document": "api-documenter markdown -i api/temp -o api/docs",
    "api": "run-s api:extract api:document"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vnphanquang/svelte-put.git"
  },
  "keywords": [
    "svelte",
    "action",
    "tableofcontents",
    "toc",
    "@svelte-put",
    "svelte-put",
    "table-of-contents",
    "table of contents",
    "table",
    "content",
    "utility",
    "store",
    "intersection observer",
    "intersection",
    "observer",
    "anchor"
  ],
  "author": "Quang Phan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vnphanquang/svelte-put/issues"
  },
  "homepage": "https://github.com/vnphanquang/svelte-put/tree/main/packages/actions/toc",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.19.27",
    "@microsoft/api-extractor": "^7.33.7",
    "@svelte-put/apirc": "workspace:^0.0.0",
    "@svelte-put/tsconfig": "workspace:^0.0.0",
    "@sveltejs/adapter-auto": "1.0.1",
    "@sveltejs/kit": "1.1.1",
    "@sveltejs/package": "1.0.2",
    "npm-run-all": "^4.1.5",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.2",
    "svelte-preprocess": "^5.0.0",
    "svelte2tsx": "^0.6.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "peerDependencies": {
    "svelte": "^3.55.0"
  }
}
