{
  "name": "@svelte-put/avatar",
  "version": "1.0.15",
  "description": "Component and utils for handling avatar",
  "type": "module",
  "svelte": "./lib/index.js",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "exports": {
    "./package.json": "./package.json",
    "./Avatar.svelte": "./lib/Avatar.svelte",
    "./avatar": "./lib/avatar.js",
    ".": "./lib/index.js"
  },
  "types": "lib/index.d.ts",
  "typesVersions": {
    "*": {
      "avatar": [
        "./lib/avatar.d.ts"
      ],
      "Avatar.svelte": [
        "./lib/Avatar.svelte.d.ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "!lib/package.json",
    "!lib/CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package",
    "preview": "vite preview",
    "sync": "svelte-kit sync",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --ignore-path .gitignore \"./**/*/*{ts,js,cjs,svelte}\"",
    "format": "prettier --check --ignore-path .gitignore \"./**/*.{ts,js,cjs,json,svelte,css}\"",
    "api:extract": "api-extractor run --local --verbose",
    "api:document": "api-documenter markdown -i api/temp -o api/docs",
    "api": "run-s api:extract api:document"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vnphanquang/svelte-put.git"
  },
  "keywords": [
    "svelte",
    "component",
    "utility",
    "avatar",
    "gravatar",
    "uiavatar"
  ],
  "author": "Quang Phan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vnphanquang/svelte-put/issues"
  },
  "homepage": "https://svelte-put.vnphanquang.com/docs/avatar",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.19.27",
    "@microsoft/api-extractor": "^7.33.7",
    "@svelte-put/apirc": "workspace:^0.0.0",
    "@svelte-put/tsconfig": "workspace:^0.0.0",
    "@sveltejs/adapter-auto": "1.0.0",
    "@sveltejs/kit": "1.1.0",
    "@sveltejs/package": "1.0.2",
    "@types/md5": "^2.3.2",
    "npm-run-all": "^4.1.5",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.2",
    "svelte-preprocess": "^5.0.0",
    "svelte2tsx": "^0.6.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "peerDependencies": {
    "svelte": "^3.2.0"
  },
  "dependencies": {
    "md5": "^2.3.0"
  }
}
