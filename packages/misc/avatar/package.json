{
  "name": "@svelte-put/avatar",
  "version": "1.0.0",
  "description": "Component and utils for handling avatar",
  "type": "module",
  "types": "lib/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    "./Avatar.svelte": "./lib/Avatar.svelte",
    "./avatar": "./lib/avatar.js",
    ".": "./lib/index.js"
  },
  "svelte": "./lib/Avatar.svelte",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "!lib/package.json",
    "!lib/CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "package": "svelte-kit sync && svelte-kit package",
    "preview": "vite preview",
    "sync": "svelte-kit sync",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --ignore-path .gitignore \"./**/*/*{ts,js,cjs,svelte}\"",
    "format": "prettier --check --ignore-path .gitignore --plugin-search-dir=. \"./**/*.{ts,js,cjs,json,svelte,css}\"",
    "semantic-release": "semantic-release",
    "api:extract": "api-extractor run --local --verbose",
    "api:document": "api-documenter markdown -i api/temp -o api/docs",
    "api": "run-s api:extract api:document"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vnphanquang/svelte-put.git"
  },
  "keywords": [
    "svelte",
    "component",
    "utility",
    "avatar",
    "gravatar",
    "uiavatar"
  ],
  "author": "Quang Phan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vnphanquang/svelte-put/issues"
  },
  "homepage": "https://github.com/vnphanquang/svelte-put/tree/main/packages/actions/avatar",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.19.0",
    "@microsoft/api-extractor": "^7.28.6",
    "@svelte-put/apirc": "workspace:^",
    "@svelte-put/eslint-config": "workspace:^",
    "@svelte-put/prettierrc": "workspace:^",
    "@svelte-put/releaserc": "workspace:^",
    "@svelte-put/tsconfig": "workspace:^",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "1.0.0-next.392",
    "@types/md5": "^2.3.2",
    "eslint": "^8.20.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "semantic-release": "^19.0.3",
    "semantic-release-monorepo": "^7.0.5",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.12",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.2"
  },
  "peerDependencies": {
    "svelte": "^3.2.0"
  },
  "dependencies": {
    "md5": "^2.3.0"
  }
}
