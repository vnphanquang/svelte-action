{
  "name": "@svelte-put/avatar",
  "version": "2.0.2",
  "description": "Component and utils for handling avatar",
  "type": "module",
  "svelte": "./src/index.js",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "svelte": "./src/index.js",
      "import": "./src/index.js"
    },
    "./Avatar.svelte": {
      "types": "./src/Avatar.svelte.d.ts",
      "svelte": "./src/Avatar.svelte"
    },
    "./helpers": {
      "types": "./types/index.d.ts",
      "svelte": "./src/avatar.helpers.js",
      "import": "./src/avatar.helpers.js"
    }
  },
  "typesVersions": {
    "*": {
      "helpers": [
        "./types/index.d.ts"
      ],
      "Avatar.svelte": [
        "./src/Avatar.svelte.d.ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "types"
  ],
  "scripts": {
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "eslint --ignore-path .gitignore \"./**/*/*{ts,js,cjs,svelte}\"",
    "format": "prettier --check --ignore-path .gitignore \"./**/*.{ts,js,cjs,json,svelte,css}\"",
    "dts": "node scripts/generate-dts-bundle.js && publint",
    "prepublishOnly": "pnpm dts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vnphanquang/svelte-put.git"
  },
  "keywords": [
    "svelte",
    "component",
    "utility",
    "avatar",
    "gravatar",
    "uiavatar"
  ],
  "author": "Quang Phan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vnphanquang/svelte-put/issues"
  },
  "homepage": "https://svelte-put.vnphanquang.com/docs/avatar",
  "devDependencies": {
    "@svelte-put/apirc": "workspace:*",
    "@svelte-put/tsconfig": "workspace:*",
    "@types/md5": "^2.3.2",
    "dts-buddy": "^0.1.7",
    "publint": "^0.1.9",
    "svelte": "^4.0.5"
  },
  "peerDependencies": {
    "svelte": "^3.55.0 || ^4.0.0"
  },
  "dependencies": {
    "md5": "^2.3.0"
  }
}
