{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^dts"],
      "outputs": ["dist/**", "build/**", ".vercel/**"]
    },
    "package": {
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "api": {
      "dependsOn": ["^build", "build"],
      "outputs": ["api/**"]
    },
    "dts": {
      "outputs": ["types/index.d.ts", "types/index.d.ts.map"]
    }
  }
}
