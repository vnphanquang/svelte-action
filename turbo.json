{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"dts": {
			"dependsOn": ["^dts"],
			"inputs": ["src/**/*.js", "*.config.js", "src/**/*.ts"],
			"outputs": ["types/index.d.ts", "types/index.d.ts.map"],
			"cache": true
		},
		"build": {
			"dependsOn": ["^build", "^dts"],
      "outputs": ["dist/**", "build/**", ".svelte-kit/**"],
			"inputs": [
				"*.config.js",
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.svelte",
				"src/**/*.css",
				"src/**/*.json"
			]
		},
		"lint": {
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
